.Main_chat

  .RightHeader
    .RightHeader__Box
      .RightHeader__Member
        test
        %ul.RightHeader__List
          Member :
          %li.RightHeader__name
            name
    = link_to "#", class: "RightHeader__Edit-btn" do
      Edit

  .MessageField
    = render @messages

  .Form
    = form_for [@group, @message] do |f|
      .Form-box
        = f.text_field :content, class: 'Form__inputMessage', placeholder: 'type a message'
        .Form__inputImages
          = f.label :image, class: 'Form__inputImage' do
            = icon('far', 'image', class: 'Form__icon')
            = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__send-btn'

